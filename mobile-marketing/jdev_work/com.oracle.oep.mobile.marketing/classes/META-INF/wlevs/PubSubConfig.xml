<?xml version="1.0" encoding="UTF-8"?>
<wlevs:config xmlns:wlevs="http://www.bea.com/ns/wlevs/config/application">

  	<http-pub-sub-adapter>
		<name>DeviceLocationPubAdapter</name>
		<server-url>http://localhost:7001/MarketingWeb/cometd</server-url>	
		<channel>/marketing/devicepos</channel>
		<event-type>DeviceEvent</event-type>
	</http-pub-sub-adapter>

  	<http-pub-sub-adapter>
		<name>PromotionPubAdapter</name>
		<server-url>http://localhost:7001/MarketingWeb/cometd</server-url>	
		<channel>/marketing/promotion</channel>
		<event-type>PromotionEvent</event-type>
	</http-pub-sub-adapter>


	<http-pub-sub-adapter>
		<name>ThanksPubAdapter</name>
		<server-url>http://localhost:7001/MarketingWeb/cometd</server-url>
		<channel>/marketing/thanks</channel>
		<event-type>ThanksEvent</event-type>
	</http-pub-sub-adapter>
</wlevs:config>

